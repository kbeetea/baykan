@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="card p-4 shadow-lg border-0" style="width: 450px; border-radius: 12px;">
        <h4 class="text-center mb-3" style="font-family: 'Playfair Display', serif; color: #5a3e2b;">
            Create an Account
        </h4>

        <p class="text-center" style="font-size: 14px; color: #7d5d48;">
            Join Baykan and start your premium shopping experience.
        </p>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "mt-3" }))
        {
            <!-- User Type Selection -->
            <div class="mb-3">
                <label class="form-label" style="font-weight: 600; color: #5a3e2b;">I am a:</label>
                <select id="userType" name="UserType" class="form-control" style="border-radius: 8px; border-color: #d8c1ac;">
                    <option value="Customer">Customer</option>
                    <option value="Merchant">Merchant</option>
                </select>
            </div>

            <!-- Common Fields -->
            <div class="mb-3">
                <label for="name" class="form-label" style="font-weight: 600; color: #5a3e2b;">Full Name / Username</label>
                <input type="text" id="name" name="Name" class="form-control" required style="border-radius: 8px; border-color: #d8c1ac;">
            </div>

            <div class="mb-3">
                <label for="email" class="form-label" style="font-weight: 600; color: #5a3e2b;">Email</label>
                <input type="email" id="email" name="Email" class="form-control" required style="border-radius: 8px; border-color: #d8c1ac;">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label" style="font-weight: 600; color: #5a3e2b;">Password</label>
                <input type="password" id="password" name="Password" class="form-control" required style="border-radius: 8px; border-color: #d8c1ac;">
            </div>

            <!-- Address Field (Only for Customers) -->
            <div class="mb-3" id="addressField">
                <label for="address" class="form-label" style="font-weight: 600; color: #5a3e2b;">Address</label>
                <input type="text" id="address" name="Address" class="form-control" style="border-radius: 8px; border-color: #d8c1ac;">
            </div>

            <button type="submit" class="btn w-100"
                    style="background-color: #7f5c3d; color: white; font-weight: 600; padding: 10px; border-radius: 8px;">
                Register
            </button>
        }

        <p class="mt-3 text-center" style="font-size: 14px;">
            Already have an account?
            <a href="@Url.Action("Login", "Account")" style="color: #7f5c3d; font-weight: 600; text-decoration: none;">
                Login Here
            </a>
        </p>
    </div>
</div>

<script>
    document.getElementById("userType").addEventListener("change", function () {
        var userType = this.value;
        var addressField = document.getElementById("addressField");

        if (userType === "Merchant") {
            addressField.style.display = "none";
        } else {
            addressField.style.display = "block";
        }
    });

    // Hide address field initially for Merchants
    document.getElementById("userType").dispatchEvent(new Event("change"));
</script>


<style>
    .custom-input {
        border-radius: 8px;
        border: 1px solid #d8c1ac;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            border-color: #b8885e;
            box-shadow: 0 0 5px rgba(184, 136, 94, 0.3);
        }

    .custom-btn {
        background-color: #b8885e;
        color: white;
        font-weight: bold;
        padding: 10px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #8a6642;
            color: white;
        }

    .custom-link {
        color: #b8885e;
        font-weight: bold;
        text-decoration: none;
    }

        .custom-link:hover {
            color: #8a6642;
        }

    .custom-alert {
        border-radius: 8px;
        background-color: #f8d7da;
        color: #721c24;
    }
</style>