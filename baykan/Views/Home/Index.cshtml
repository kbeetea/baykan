@model List<baykan.Models.Product>

@{
    ViewBag.Title = "Home";
}

<section id="home">
    <div class="container">
        <h5>One Stop For Your Premium Looks</h5>
        <h1>YEAR END <span>SALE</span></h1>
        <h2>UP TO 30% OFF</h2>
        <a href="@Url.Action("Index", "Products")" class="btn btn-primary">SHOP NOW</a>
    </div>
</section>

<!-- Featured Products Section -->
<section id="featured" class="my-5 pb-5">
    <div class="container text-center mt-5 py-5">
        <h3>Featured Products</h3>
        <hr class="mx-auto">
        <p>Explore our exclusive collection of in-demand premium products</p>
    </div>

    <div class="row mx-auto container">
        @foreach (var product in Model)
        {
            @Html.Partial("ProductCard", product)
        }
    </div>
</section>

<!-- Placeholder for Categories Button (to be added later) -->
<section id="categories" class="text-center my-5">
    <button id="categories-button" class="btn btn-dark">Explore Categories</button>
</section>

<style>
    /* Hero Section */
    #home {
        background: url('/Content/Images/home-background.png') no-repeat center center;
        background-size: cover;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        text-align: left;
        padding-left: 8%;
        position: relative;
    }

        #home h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            color: #1b0f03;
        }

        #home h2 {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 400;
        }

        #home h5 {
            font-size: 1.2rem;
            color: #754e27;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-family: 'Inter', sans-serif;
        }

        #home span {
            color: #674324;
        }

    #shop-now-button {
        background-color: #7f5c3dde;
        color: white;
        border: none;
        padding: 12px 25px;
        font-size: 1rem;
        font-weight: lighter;
        margin-top: 10px;
        cursor: pointer;
        transition: 0.3s;
        text-transform: uppercase;
        border-radius: 3px;
    }

        #shop-now-button:hover {
            background-color: #b77c4891;
        }

    /* Categories Button */
    #categories-button {
        background-color: #b8885e;
        color: white;
        border: none;
        padding: 12px 25px;
        font-size: 1rem;
        font-weight: bold;
        margin-top: 10px;
        cursor: pointer;
        transition: 0.3s;
        border-radius: 5px;
    }

        #categories-button:hover {
            background-color: #8a5e38;
        }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#categories-button").click(function () {
            window.location.href = "/Categories/Index"; // Redirect to Categories Page
        });
    });
</script>
