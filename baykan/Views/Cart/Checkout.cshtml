@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<style>
    .checkout-container {
        margin-top: 50px;
    }

    .checkout-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    .btn-place-order {
        background-color: #b8885e;
        color: white;
        font-weight: bold;
        padding: 8px 0; /* Smaller button */
    }

        .btn-place-order:hover {
            background-color: #8a6642;
            color: white;
        }

    .btn-back {
        padding: 6px 0;
    }

    /* Hide card details initially */
    #cardDetails {
        display: none;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">Checkout</h2>

    <div class="row">
        <!-- Personal Information Section -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">Billing Details</h4>
                <form id="checkoutForm">
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" value="@ViewBag.CustomerName" required>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Shipping Address</label>
                        <input type="text" class="form-control" id="address" value="@ViewBag.CustomerAddress" required>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="changeAddressCheck">
                        <label class="form-check-label" for="changeAddressCheck">
                            Change Address?
                        </label>
                    </div>
                </form>
            </div>

            <!-- Payment Section -->
            <div class="card shadow-sm p-4 mt-4">
                <h4 class="mb-3">Payment Method</h4>
                <div class="d-flex align-items-center mb-3">
                    <img src="~/Content/images/payment.png" alt="Payment Methods" width="50" class="me-2">
                    <span>Select Payment Method</span>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="COD" checked>
                    <label class="form-check-label" for="cod">Cash on Delivery</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="card" value="Card">
                    <label class="form-check-label" for="card">Credit/Debit Card</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="upi" value="UPI">
                    <label class="form-check-label" for="upi">UPI</label>
                </div>

                <!-- Card Payment Fields -->
                <div id="cardPaymentFields" class="mt-3" style="display: none;">
                    <label for="cardNumber" class="form-label">Card Number</label>
                    <input type="text" class="form-control mb-2" id="cardNumber" placeholder="XXXX-XXXX-XXXX-XXXX">
                    <div class="d-flex">
                        <input type="text" class="form-control me-2" id="expiryDate" placeholder="MM/YY">
                        <input type="text" class="form-control" id="cvv" placeholder="CVV">
                    </div>
                </div>

                <!-- UPI Payment Fields -->
                <div id="upiPaymentFields" class="mt-3" style="display: none;">
                    <label for="upiId" class="form-label">UPI ID</label>
                    <input type="text" class="form-control" id="upiId" placeholder="example@upi">
                </div>

                <div id="unavailableMessage" class="mt-3 text-danger" style="display: none;">
                    Temporarily unavailable.
                </div>
            </div>
        </div>

        <!-- Order Summary Section -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">Order Summary</h4>
                <ul class="list-group mb-3">
                    @foreach (var item in ViewBag.CartItems)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@item.Product.ProductName (x @item.Quantity)</span>
                            <strong>Rs.@(item.Product.ProductPrice * item.Quantity)</strong>
                        </li>
                    }
                </ul>
                <h5 class="text-end">Total: <strong>Rs.@ViewBag.TotalAmount</strong></h5>

                <!-- Place Order Button -->
                <button type="submit" class="btn btn-dark w-100 mt-3 py-2" onclick="placeOrder()">Place Order</button>

                <!-- Back to Shopping Button -->
                <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-dark w-100 mt-2 py-2">
                    <i class="fas fa-arrow-left"></i> Back to Cart
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("input[name='paymentMethod']").on("change", function () {
            let selectedPayment = $("input[name='paymentMethod']:checked").val();

            if (selectedPayment === "COD") {
                $("#cardPaymentFields, #upiPaymentFields, #unavailableMessage").hide();
            } else {
                $("#unavailableMessage").show();  // Show "Temporarily unavailable"
                if (selectedPayment === "Card") {
                    $("#cardPaymentFields").show();
                    $("#upiPaymentFields").hide();
                } else if (selectedPayment === "UPI") {
                    $("#upiPaymentFields").show();
                    $("#cardPaymentFields").hide();
                }
            }
        });
    });


    function placeOrder() {
        let selectedPayment = $("input[name='paymentMethod']:checked").val();
        if (selectedPayment !== "COD") {
            alert("Payment method temporarily unavailable.");
            return;
        }

        let fullName = $("#fullName").val();
        let address = $("#address").val();
        let updateAddress = $("#changeAddressCheck").is(":checked");

        let orderData = {
            fullName: fullName,
            address: address,
            updateAddress: updateAddress,
            paymentMethod: selectedPayment
        };

        $.ajax({
            type: "POST",
            url: "/Cart/Checkout",
            data: orderData,
            success: function (response) {
                if (response.success) {
                    alert("Order placed successfully!");
                    window.location.href = "/Cart/OrderConfirmation?id=" + response.orderId;
                } else {
                    alert("Failed to place order.");
                }
            }
        });
    }
</script>
