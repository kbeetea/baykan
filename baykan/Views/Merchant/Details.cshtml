@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/MerchantLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card shadow-lg p-5" style="max-width: 800px; width: 100%;">
        <div class="row g-4">
            <!-- Left Side: Product Image -->
            <div class="col-md-5 text-center">
                @if (Model.ProductImage != null && Model.ProductImage.Length > 0)
                {
                    string base64String = Convert.ToBase64String(Model.ProductImage);
                    <img src="data:image/png;base64,@base64String" class="img-fluid rounded" style="max-width: 100%;" />
                }
                else
                {
                    <p>No Image Available</p>
                }
            </div>

            <!-- Right Side: Product Details -->
            <div class="col-md-7">
                <h2 class="text-primary">@Model.ProductName</h2>
                <p class="text-muted"><strong>Description:</strong> @Model.ProductDescription</p>
                <p><strong>Price:</strong> $@Model.ProductPrice</p>
                <p><strong>Category:</strong> @(Model.Category != null ? Model.Category.CategoryName : "No Category")</p>
                <p><strong>Brand:</strong> @(Model.Brand != null ? Model.Brand.BrandName : "No Brand")</p>

                <a href="@Url.Action("Index", "Merchant")" class="btn btn-secondary mt-3">Back to List</a>
            </div>
        </div>
    </div>
</div>