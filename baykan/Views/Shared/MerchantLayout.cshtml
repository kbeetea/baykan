<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Merchant Panel</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/custom.css" />

    <style>
        /* Navbar */
        .navbar {
            background: rgba(255, 255, 255, 0.9);
            padding: 15px 8%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            font-weight: bold;
            color: #b8885e !important;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            color: #754e27 !important;
            margin: 0 10px;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #a3764c !important;
            }

        /* Footer */
        .footer {
            background: rgba(255, 255, 255, 0.9);
            color: #754e27;
            padding: 15px 0;
            text-align: center;
            font-size: 1rem;
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("MerchantHome", "Merchant")">Merchant Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MerchantHome", "Merchant")">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Merchant")">Products Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Merchant")">Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Orders", "Merchant")">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    @Html.Partial("Footer")

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
