@model List<baykan.Models.Product>

<table class="table table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>$@product.ProductPrice</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a href="@Url.Action("Edit", "Merchant", new { id = product.ProductId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Details", "Merchant", new { id = product.ProductId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Merchant", new { id = product.ProductId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
